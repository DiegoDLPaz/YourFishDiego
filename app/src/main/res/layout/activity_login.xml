<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingBottom="40dp"
    android:paddingTop="30dp"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your fish"
            android:textSize="40dp"
            android:textColor="@color/botones"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:tint="@color/botones"
            android:src="@drawable/pescado"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:layout_gravity="start"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/LoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="50sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="140dp"
                android:src="@drawable/baseline_settings_24"
                android:scaleType="fitCenter"
                android:backgroundTint="@android:color/transparent"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/usuarioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserta tu usuario"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/fondo"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/design_default_color_error"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColorHint="@color/fondo"
                android:hint="Inserta tu usuario aquí"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/contrasenaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserta tu contraseña"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/botones"
            app:hintTextColor="@color/fondo"
            app:boxStrokeColor="@color/black"
            app:boxStrokeErrorColor="@color/design_default_color_error"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHint="@color/fondo"
                android:hint="Inserta tu contraseña aquí"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/toolbar"
            android:layout_marginTop="20dp"
            android:text="Entrar"
            android:textSize="20dp"
            android:backgroundTint="@color/fondo"
            android:layout_gravity="center"
            />
        
        <TextView
            android:id="@+id/crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="¿No tienes una cuenta?"
            android:textSize="18dp"
            android:textColor="@color/botones"

            />
            
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>